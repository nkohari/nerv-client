.chart
  height: 300px
  background: #FFFFFF
  box-shadow: 0 0 0 1px rgba(16, 22, 26, 0.15)
  padding: 15px
  margin: 15px

  .empty-message
    display: flex
    height: 300px
    align-items: center
    justify-content: center

  .recharts
    font-size: 12px

  .recharts-xAxis
    .recharts-cartesian-axis-tick-value
      transform: translateY(5px)

  .recharts-yAxis
    .recharts-cartesian-axis-tick-value
      transform: translateX(-5px)